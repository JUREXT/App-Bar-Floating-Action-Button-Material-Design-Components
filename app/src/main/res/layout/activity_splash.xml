<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SplashActivity">


    <View
        android:id="@+id/first_line"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/second_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/second_line"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorLightRed"
        app:layout_constraintEnd_toStartOf="@+id/third_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/third_line"
        android:layout_width="20dp"
        android:layout_height="250dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toStartOf="@+id/fourth_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fourth_line"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorLightRed"
        app:layout_constraintEnd_toStartOf="@+id/fifth_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fifth_line"
        android:layout_width="20dp"
        android:layout_height="220dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/sixth_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sixth_line"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Just Do It"
        android:textColor="#fff"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Android Developer JL&#169;2020"
        android:textColor="#8A8585"
        android:textSize="24sp"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>